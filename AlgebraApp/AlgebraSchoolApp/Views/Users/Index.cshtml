@model IEnumerable<AlgebraSchoolApp.Models.ApplicationUser>

@{
    ViewBag.Title = "Korisnici";
}

<h2>Popis registriranih korisnika</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Dodaj djelatnika", "AddEmployee", new { id = item.Id })
        </td>
    </tr>
}

</table>
