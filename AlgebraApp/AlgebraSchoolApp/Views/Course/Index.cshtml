@model IEnumerable<AlgebraSchoolApp.Models.CourseCustomModel>

@{
    ViewBag.Title = "Tečajevi";
}

<h2>Tečajevi</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Full)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Full)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingCount)
                </td>
                <td>
                    @Html.ActionLink("Uredi", "Edit", new { id = item.CourseId }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.CourseId })
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="button" class="btn btn-primary" value="Kreiraj novi tečaj" onclick="location.href='@Url.Action("Create", "Course")'" />
