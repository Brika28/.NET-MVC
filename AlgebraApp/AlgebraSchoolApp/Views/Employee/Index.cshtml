@model AlgebraSchoolApp.Models.GroupedUserViewModel

@{
    ViewBag.Title = "Popis djelatnika";
}

    <h2>Djelatnici i njihove uloge</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Korisničko ime")
                </th>
                <th>
                    @Html.DisplayName("Uloga")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles)
                </td>
            </tr>
            }
            @foreach (var item in Model.Admins)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
        </tr>
            }
        </tbody>
    </table>